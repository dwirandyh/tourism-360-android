<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle"/>
    </item>
    <item
        android:bottom="0dp"
        android:left="-250dp"
        android:right="-250dp"
        android:top="-80dp">
        <shape android:shape="oval" >
            <gradient
                android:angle="90"
                android:endColor="#187DBD"
                android:startColor="#4B9AD3"
                android:type="linear" />
        </shape>
    </item>
</layer-list>

